<div class="container">
  <div class="managers-info-wrapper">
    <h1 style="padding-left:10px;">お気に入り編集画面</h1>
      <h2 style="padding-left:10px;">お気に入りID: <%= @like.id %></h2>
      <h2 style="padding-left:10px;">created_at : <%= @like.created_at %></h2>
      <h2 style="padding-left:10px;">updated_at : <%= @like.updated_at %></h2>
      <%= form_tag("/managers/likes/#{@like.id}/update",method: :post,class: "edit-wrapper") do %>
        <h2>event_id</h2>
        <input type="text" name="event_id" value="<%= @like.event_id %>">
        <h2>user_id</h2>
        <input type="text" name="user_id" value="<%= @like.user_id %>">
        <input type="submit" value="編集">
      <%end%>
        <%= link_to "削除","/managers/likes/#{@like.id}/destroy",method: :post,id: "edit-destroy" %>
  </div>
</div>
