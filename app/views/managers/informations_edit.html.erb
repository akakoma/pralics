<div class="container">
  <div class="managers-info-wrapper">
    <h1 style="padding-left:10px;">お知らせ編集画面</h1>
      <h2 style="padding-left:10px;">お知らせID: <%= @information.id %></h2>
      <h2 style="padding-left:10px;">created_at : <%= @information.created_at %></h2>
      <h2 style="padding-left:10px;">updated_at : <%= @information.updated_at %></h2>
      <%= form_tag("/managers/informations/#{@information.id}/update",multipart: true,class: "edit-wrapper") do %>
        <h2>user_id</h2>
        <input type="text" name="user_id" value="<%= @information.user_id %>">
        <h2>group_id</h2>
        <input type="text" name="group_id" value="<%= @information.group_id %>">
        <h2>company_id</h2>
        <input type="text" name="company_id" value="<%= @information.company_id %>">
        <h2>title</h2>
        <input type="text" name="title" value="<%= @information.title %>">
        <h2>image</h2>
        <input type="file" name="image" value="<%= @information.image %>">
        <h2>body</h2>
        <textarea name="body" rows="8" cols="80"><%= @information.body %></textarea>
        <input type="submit" value="編集">
      <%end%>
        <%= link_to "削除","/managers/informations/#{@information.id}/destroy",method: :post,id: "edit-destroy" %>
  </div>
</div>
